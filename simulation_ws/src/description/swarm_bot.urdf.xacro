<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="swarm_bot">

    
    <!-- Base -->
    <link name="base_link">
        <visual>
            <!-- change the position of the visualization only, not the axis -->
            <origin xyz="0 0 0.1075" rpy="0 0 0"/>
            <geometry>
                <!-- unit: meter -->
                <cylinder radius="0.107" length="0.15"/> 
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>
    
    <!-- Left Wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>
    
    <!-- Right Wheel -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>
    
    <!-- Front Passive Wheel --> 
    <link name="front_passive_wheel">
        <visual>
            <geometry>
                <sphere radius="0.024"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Back Passive Wheel -->
    <link name="back_passive_wheel">
        <visual>
            <geometry>
                <sphere radius="0.024"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    
    <!-- Lidar -->
    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.045"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
    </link>

    
    <!-- Joints -->

    <!-- Left Wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <!-- rotate wheel 90 deg around x-axis -->
        <origin xyz="0 -0.107 0.0325" rpy="-1.5708 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <!-- Right Wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 0.107 0.0325" rpy="1.5708 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <!-- Front Passive Wheel -->
    <joint name="front_passive_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_passive_wheel"/>
        <origin xyz="0.067 0 0.024" rpy="0 0 0"/>
    </joint>

    <!-- Back Passive Wheel -->
    <joint name="back_passive_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_passive_wheel"/>
        <origin xyz="-0.067 0 0.022" rpy="0 0 0"/>
    </joint>

    <!-- Lidar -->
    <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar"/>
        <origin xyz="0 0 0.205" rpy="0 0 0"/>
    </joint>
    
</robot>
