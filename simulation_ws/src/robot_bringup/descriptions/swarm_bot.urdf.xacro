<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="swarm_bot">

    <xacro:include filename="inertial_macros.xacro" />
    <xacro:include filename="gazebo_control.xacro" />
    <xacro:include filename="lidar.xacro" /> 


    <!-- LINKS -->
    
    <!-- Origin -->
    <link name="origin_link">
    </link>

    <!-- Base -->
    <link name="base_link">
        <visual>
            <!-- change the position of the visualization only, not the axis -->
            <origin xyz="0 0 0.1075" rpy="0 0 0"/>
            <geometry>
                <!-- unit/ meter -->
                <cylinder radius="0.107" length="0.15"/> 
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.1075" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.107" length="0.15"/> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.15" radius="0.107">
            <origin xyz="0 0 0.1075" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="base_link">
        <material>Gazebo/White</material>
    </gazebo>
    

    <!-- Left Wheel -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.03" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    
    <!-- Right Wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.03"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.03" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    
    <!-- Front Passive Wheel --> 
    <link name="front_passive_wheel">
        <visual>
            <geometry>
                <sphere radius="0.024"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.024"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="front_passive_wheel">
        <material>Gazebo/Black</material>
        <!-- reduce friction to make the wheels able to roll -->
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>


    <!-- Back Passive Wheel -->
    <link name="back_passive_wheel">
        <visual>
            <geometry>
                <sphere radius="0.024"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.024"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.024">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="back_passive_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
    
    <!-- JOINTS-->

    <!-- Base -->
    <joint name="origin_joint" type="fixed">
        <parent link="origin_link"/>
        <child link="base_link"/>
        <origin xyz="0 0 -0.0325"/>
    </joint>

    <!-- Left Wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="origin_link"/>
        <child link="right_wheel"/>
        <!-- rotate wheel 90 deg around x-axis -->
        <origin xyz="0 -0.107 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- Right Wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="origin_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.107 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    
    <!-- Front Passive Wheel -->
    <joint name="front_passive_wheel_joint" type="fixed">
        <parent link="origin_link"/>
        <child link="front_passive_wheel"/>
        <origin xyz="0.067 0 -0.0085" rpy="0 0 0"/>
    </joint>

    <!-- Back Passive Wheel -->
    <joint name="back_passive_wheel_joint" type="fixed">
        <parent link="origin_link"/>
        <child link="back_passive_wheel"/>
        <origin xyz="-0.067 0 -0.0083" rpy="0 0 0"/>
    </joint>

</robot>
